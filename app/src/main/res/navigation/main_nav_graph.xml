<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="ru.android.rickandmortymvvm.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_charactersFragment"
            app:destination="@id/charactersFragment" />
        <action
            android:id="@+id/action_homeFragment_to_locationsFragment"
            app:destination="@id/locationsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_episodesFragment"
            app:destination="@id/episodesFragment" />
    </fragment>
    <fragment
        android:id="@+id/charactersFragment"
        android:name="ru.android.rickandmortymvvm.presentation.character.CharactersFragment"
        android:label="CharactersFragment"
        tools:layout="@layout/fragment_characters" />
    <fragment
        android:id="@+id/episodesFragment"
        android:name="ru.android.rickandmortymvvm.presentation.episode.EpisodesFragment"
        android:label="EpisodesFragment"
        tools:layout="@layout/fragment_episodes" />
    <fragment
        android:id="@+id/locationsFragment"
        android:name="ru.android.rickandmortymvvm.presentation.location.LocationsFragment"
        android:label="LocationsFragment"
        tools:layout="@layout/fragment_locations" />
</navigation>